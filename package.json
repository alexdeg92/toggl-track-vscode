{
  "name": "toggl-track-auto",
  "displayName": "Toggl Track Auto",
  "description": "Automatically track time in Toggl based on your git branch and Monday.com tickets",
  "version": "0.28.1",
  "publisher": "pivotteam",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexdeg92/toggl-track-vscode.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "toggl-track-auto.setup",
        "title": "Toggl: Setup (Configure API tokens)"
      },
      {
        "command": "toggl-track-auto.start",
        "title": "Toggl: Start Tracking"
      },
      {
        "command": "toggl-track-auto.stop",
        "title": "Toggl: Stop Tracking"
      },
      {
        "command": "toggl-track-auto.status",
        "title": "Toggl: Show Status"
      },
      {
        "command": "toggl-track-auto.toggleBreak",
        "title": "Toggl: Start/End Break"
      },
      {
        "command": "toggl-track-auto.createBranchFromTask",
        "title": "Toggl: Create Branch from Task"
      },
      {
        "command": "toggl-track-auto.copyMondayTaskLink",
        "title": "Toggl: Copy Monday Task Link"
      },
      {
        "command": "toggl-track-auto.refreshTaskContext",
        "title": "Toggl: Refresh Task Context"
      },
      {
        "command": "toggl-track-auto.refreshMondaySidebar",
        "title": "Toggl: Refresh Monday Sidebar"
      },
      {
        "command": "toggl-track-auto.remapBranchTask",
        "title": "Toggl: Remap Branch to Monday Task"
      }
    ],
    "views": {
      "togglMonday": [
        {
          "type": "webview",
          "id": "togglMondayWebview",
          "name": "Task Details"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "togglMondayTask",
        "contents": "No Monday.com task linked to the current branch.\n[Create Branch from Task](command:toggl-track-auto.createBranchFromTask)"
      }
    ],
    "configuration": {
      "title": "Toggl Track Auto",
      "properties": {
        "togglTrackAuto.apiToken": {
          "type": "string",
          "default": "",
          "description": "Your Toggl API token (from https://track.toggl.com/profile)"
        },
        "togglTrackAuto.workspaceId": {
          "type": "number",
          "default": 0,
          "description": "Your Toggl workspace ID"
        },
        "togglTrackAuto.mondayApiToken": {
          "type": "string",
          "default": "",
          "description": "Your Monday.com API token (also reads from MONDAY_TOKEN env var if not set)"
        },
        "togglTrackAuto.mondayBoardId": {
          "type": "string",
          "default": "4176868787",
          "description": "Monday.com board ID for SPRINTS DEV"
        },
        "togglTrackAuto.branchPattern": {
          "type": "string",
          "default": "(\\d{6,})",
          "description": "Regex pattern to extract ticket ID from branch name"
        },
        "togglTrackAuto.entryFormat": {
          "type": "string",
          "default": "[{ticket_id}] {task_name}",
          "description": "Format for Toggl time entry description"
        },
        "togglTrackAuto.idleTimeoutMinutes": {
          "type": "number",
          "default": 5,
          "description": "Stop tracking after this many minutes of inactivity"
        },
        "togglTrackAuto.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic time tracking"
        },
        "togglTrackAuto.projectId": {
          "type": "number",
          "default": 0,
          "description": "Toggl project ID to use (0 for no project)"
        },
        "togglTrackAuto.allowedOrgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "pivotteam"
          ],
          "description": "Only track time for repos belonging to these GitHub organizations. Empty array = track all repos."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "togglMonday",
          "title": "Monday.com",
          "icon": "media/monday-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "icon": "icon.png"
}